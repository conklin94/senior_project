<% content_for :page_title, "Log in" %>
<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  label_html: { class: "text-light"} %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  label_html: { class: "text-light"} %>
      <%= f.input :remember_me, label_html: {class: "text-light"}, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-light btn-lg" %>
    </div>
  <% end %>
  <br>

  <%= render "devise/shared/links" %>
</div>
