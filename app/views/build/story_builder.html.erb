<div class="container text-center">
  <h1 class="text-light mt-5">Story Builder</h1>
  <h4 class="text-light">Fill in the following fields, or click
    <button type="button" class="btn btn-light btn-lg">here</button>
    to randomly generate values</h4>
  <form>
    <div class="form-group">
      <label class="text-light" for="protagonistName">Protagonist Name</label>
      <input type="text" class="form-control" id="protagonistName" placeholder="Name">
    </div>
    <div class="form-group">
      <label class="text-light" for="genre">Genre</label>
      <select class="form-control" id="genre">
        <option>Mystery</option>
        <option>Thriller</option>
        <option>Science Fiction</option>
        <option>Romance</option>
        <option>Fantasy</option>
      </select>
    </div>
    <div class="form-group">
      <label class="text-light" for="secondaryCharacterName">Secondary Character Name</label>
      <input type="text" class="form-control" id="exampleFormControlSelect2" placeholder="Name">
    </div>
    <button type="submit" class="btn btn-primary btn-lg">Create</button>
  </form>
</div>
