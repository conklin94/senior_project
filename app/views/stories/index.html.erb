<% content_for :view_class, "active" %>
<% content_for :page_title, "Story List" %>
<% @stories.each do |story| %>
  <div class="container bg-light text-left mt-2">
      <h3><%= link_to story.title, story %></h3>
      <h4>By <%= story.author %></h4>
      <p class="lead"><%= story.text %></p>
  </div>
<% end %>
